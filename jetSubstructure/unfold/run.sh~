root -l <<EOF
gSystem->Load("libRooUnfold");
.L unfoldPtMass.cxx+
EOF

for kSample in 1 0  # 0 = pp,  1 = pbpb
do
    for optX in 1  # 1
    do
	for optY in 8 
	do
	    for radius in 0.4
	    do
		for niter in  26 28 30 32 34 36 40
		do
		    root -l -b -q  'unfoldPtMass.cxx+('$kSample','$optX','$optY','$radius','$niter')'
		done
	    done
	done
    done
done

